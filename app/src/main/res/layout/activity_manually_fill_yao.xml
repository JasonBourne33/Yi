        android:id="@+id/sp_yao5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:autofillHints="六爻"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/tv_yao4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="四爻"
        />
    <Spinner
        android:id="@+id/sp_yao4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:autofillHints="六爻"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/tv_yao3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="三爻"
        />
    <Spinner
        android:id="@+id/sp_yao3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:autofillHints="六爻"
        android:layout_weight="1"
        />
    <TextView
        android:id="@+id/tv_yao2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="二爻"
        />
